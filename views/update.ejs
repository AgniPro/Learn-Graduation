<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Secrets</h1>
    <p class="secret-text">Don't keep your secrets, share them anonymously!</p>

    <form action="/update" method="POST">

      <div class="form-group">
       <p><%-url %></p>
        <input type="text"  name="url" value="<%- url %>" style="visibility: hidden;">
        <input type="text" class="form-control text-center" name="title" value="<%- title %>" placeholder="Title">
        <input type="text" class="form-control text-center" name="disc" value="<%- disc %>" placeholder="Discription">
        <input type="text" class="form-control text-center" name="pimg" value="<%- pimg %>" placeholder="Post Thumbnail">
        <input type="text" class="form-control text-center" name="content" value="<%- content %>" placeholder="Content">
        <span><%- date %></span>
      </div>
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>

  </div>
</div>
<%- include('partials/footer') %>
