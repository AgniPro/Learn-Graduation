<% posts.forEach(function(post){ %>
<div class="card">
    <div class="card-body">
        <h1 class="card-title"> <%-post.title %> </h1>
        <p class="card-text"> <%- post.content.substring(0,100) + "..." %>
            <a id="readmore" href="/posts/<%=post._id%>">Read More</a>
        </p>
    </div>
</div>
<% }) %>

